{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<section class="container">
  <form id="form-transfer" method="POST" action="/sendData" enctype="multipart/form-data">
    <h2>Ajouter un fichier à Transférer</h2>

    <p class="champ">
      Adresse du destinataire :<br>
      <input type="email" name="mail_from" placeholder=" E-mail" require><br>
    </p>
    <p class="champ">
      Votre adresse e-mail :<br>
      <input type="email" name="mail_to" placeholder=" E-mail" require><br>
    </p>

    Téléverser un fichier:<br>
    <div id="drop-zone" class="upload-zone-wait">Glisser/déposer</div>
    <div id="drop-show"></div>
    <input id="televerser" type="file" name="files[]" multiple>
    <input  id="submit" class="button-submit" type="submit" name="submit" value="Envoyer">
  </form>
</section>




{% endblock %}
